{
  "version": "1.0.4",
  "name": "svelte-battery-status",
  "description": "A store implementation for Svelte to use the Battery Status API for PWAs",
  "svelte": "index.js",
  "keywords": [
    "svelte battery status api",
    "battery status pwa api sveltekit"
  ],
  "homepage": "https://github.com/flaming-codes/svelte-battery-status",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaming-codes/svelte-battery-status.git"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "package": "npm run copy:files && svelte-kit package",
    "preview": "svelte-kit preview",
    "test": "playwright test",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "pub": "npm publish --access public ./package",
    "pkgpub": "npm run package && npm run pub",
    "copy:files": "npx copyfiles ../README.md ../LICENSE pkg"
  },
  "devDependencies": {
    "@playwright/test": "^1.19.1",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.10.1",
    "svelte2tsx": "^0.5.5",
    "tslib": "^2.3.1",
    "typescript": "~4.5.4"
  },
  "bugs": {
    "url": "https://github.com/flaming-codes/svelte-battery-status/issues"
  }
}
